<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sunnyenterprise">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity
            android:name=".activities.OrderActivity"
            android:theme="@style/NoTitleTheme" />

        <activity
            android:name=".activities.NotificationActivity"
            android:theme="@style/NoTitleTheme" />

        <activity
            android:name=".activities.AddToCartActivity"
            android:theme="@style/NoTitleTheme" />

        <activity
            android:name=".activities.ProductDetailsActivity"
            android:theme="@style/NoTitleTheme">

        </activity>

        <activity
            android:name=".activities.ProductActivity"
            android:label="Products"
            android:theme="@style/NoTitleTheme" />

        <activity
            android:name=".activities.CatalogActivity"
            android:label="Catalog"
            android:theme="@style/NoTitleTheme" />

        <activity
            android:name=".activities.HomeActivity"
            android:theme="@style/NoTitleTheme">



        </activity>

        <activity android:name=".activities.LoginActivity"/>

        <activity android:name=".activities.SplashActivity">


            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>


        </activity>

    </application>

</manifest>